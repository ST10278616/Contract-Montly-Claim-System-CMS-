@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Verify Claims";
}

<h2>Verify Claims</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Claim Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.ClaimAmount</td>
                <td>@claim.Status</td>
                <td>
                    <a asp-controller="Claims" asp-action="ApproveClaim" asp-route-id="@claim.Id" class="btn btn-success">Approve</a>
                    <a asp-controller="Claims" asp-action="RejectClaim" asp-route-id="@claim.Id" class="btn btn-danger">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
