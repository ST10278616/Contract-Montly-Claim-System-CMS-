@{
    ViewData["Title"] = "Home Page";
}

<h1>@ViewData["Title"]</h1>
<p>Welcome to the Contract Monthly Claim System!</p>

<div class="button-container">
    <a href="/Claims/SubmitClaim" class="btn btn-primary">Submit Claim</a>
    <a href="/Claims/TrackStatus" class="btn btn-secondary">Track Status</a>
    <a href="/Claims/UploadDocument" class="btn btn-info">Upload Document</a>
    <a href="/Claims/VerifyClaim" class="btn btn-warning">Verify Claim</a>
</div>

<!-- Optional: Add some inline CSS or link to an external stylesheet for button styling -->
<style>
    .button-container {
        margin-top: 20px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        margin: 5px;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-info {
        background-color: #17a2b8;
    }

    .btn-warning {
        background-color: #ffc107;
    }
</style>
